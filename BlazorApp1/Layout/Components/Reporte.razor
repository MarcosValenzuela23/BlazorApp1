@page "/reporte/{id:int}"
@using System.Linq
@using System.Threading.Tasks
@inject AccidenteService AccidenteService

<div>
    <h3>Reporte de Accidente</h3>
    <div>Fecha: @accidente?.Fecha</div>
    <div>Descripción: @accidente?.Descripcion</div>
    <div>Costo Económico: @accidente?.CostoEconomico</div>
    <div>Número de Muertos: @accidente?.NumeroMuertos</div>
    <div>Número de Heridos: @accidente?.NumeroHeridos</div>
    <div>Cantidad de Vehículos: @accidente?.CantidadVehiculos</div>
    <button @onclick="Print">Imprimir</button>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Models.Accidente accidente;

    public Reporte()
    {
    }

    protected override async Task OnInitializedAsync()
    {
        var accidentes = await AccidenteService.GetAccidentesAsync();
        accidente = accidentes.FirstOrDefault(a => a.Id == Id);
    }

    private void Print()
    {
        // Lógica para imprimir el reporte
    }
}
